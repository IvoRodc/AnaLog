<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue300</item>
        <item name="background">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Estilo para o Splash Screen -->
    <style name="AppTheme.splashScreen" parent="AppTheme">
        <item name="android:windowBackground">@color/blue300</item>
        <item name="android:navigationBarColor">@color/blue300</item>
        <item name="android:statusBarColor">@color/blue300</item>
        <item name="background">@color/blue300</item>
    </style>

    <!-- Estilo para a Top Bar das atividades -->
    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Estilo para as caixas de texto -->
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/AppTheme.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/blue300</item>

    </style>
    <style name="AppTheme.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="AppTheme.TextCursor">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>


    <!-- Estilo para os Modal Bottom Sheets -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_style</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

</resources>
